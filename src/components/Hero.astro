<section class="min-h-screen flex flex-col justify-center items-center text-center bg-white px-6 overflow-hidden relative">
  <div class="z-10 relative space-y-6">
    <p class="text-green-900 font-semibold text-sm tracking-widest uppercase">BIENVENIDO A</p>
    <h1 class="text-6xl md:text-7xl font-extrabold text-darkBlue leading-tight">
      FUHR MARKETING
    </h1>
    <p class="text-darkBlue/70 text-lg max-w-xl mx-auto">
      Una agencia que combina estrategia, diseño y tecnología para hacer crecer marcas locales.
    </p>
  </div>

  <!-- isotipo rotatorio -->
  <img
    id="iso-spin"
    src="/images/hero.jpg"
    alt="Isotipo FUHR"
    class="absolute w-72 md:w-96 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-100 pointer-events-none z-0"
  />

  <script>
    const img = document.getElementById('iso-spin');
    const maxRot = 360;
    window.addEventListener('scroll', () => {
      const progress = window.scrollY / (document.body.scrollHeight - window.innerHeight);
      img.style.transform = `translate(-50%, -50%) rotate(${progress * maxRot}deg)`;
    });
  </script>
</section>
